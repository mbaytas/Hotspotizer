<grammar
  xmlns="http://www.w3.org/2001/06/grammar"
  tag-format="semantics/1.0"
  version="1.0"
  root="rootRule"
  xml:lang="en"
  >

  <!--
    Note: System.Speech doesn't support tag-format="semantics/1.0-literals" (Microsoft.Speech does instead),
    so using tag-format="semantics/1.0" and instead of <tag>x</tag> using <tag>out="x"</tag>
  -->

  <rule id="rootRule">
    <one-of>

      <item>
        <tag>out="ADD_NEW_GESTURE"</tag>
        <one-of>
          <item> add gesture </item>
          <item> add new gesture </item>
        </one-of>
      </item>

      <item>
        <tag>out="CLOSE_EDITOR"</tag>
        <one-of>
          <item> close </item>
          <item> close editor </item>
        </one-of>
      </item>

      <item>
        <tag>out="SAVE_GESTURE"</tag>
        <one-of>
          <item> save </item>
          <item> save gesture </item>
        </one-of>
      </item>

      <item>
        <tag>out="PRESS_MODE"</tag>
        <one-of>
          <item> press </item>
        </one-of>
      </item>

      <item>
        <tag>out="HOLD_MODE"</tag>
        <one-of>
          <item> hold </item>
        </one-of>
      </item>

      <item>
        <tag>out="GESTURE_COMMAND"</tag>
        <one-of>
          <item> command </item>
          <item> key </item>
          <item> keys </item>
        </one-of>
      </item>

      <item>
        <tag>out="ADD_FRAME"</tag>
        <one-of>
          <item> add frame </item>
        </one-of>
      </item>

      <item>
        <tag>out="REMOVE_FRAME"</tag>
        <one-of>
          <item> remove </item>
          <item> remove frame </item>
          <item> delete </item>
          <item> delete frame </item>
        </one-of>
      </item>

      <item>
        <tag>out="NAME"</tag>
        <one-of>
          <item> name </item>
          <item> rename </item>
        </one-of>
      </item>

      <item>
        <tag>out="MOVE_FRAME_BACKWARDS"</tag>
        <one-of>
          <item> back </item>
          <item> move back </item>
          <item> move frame backwards </item>
        </one-of>
      </item>

      <item>
        <tag>out="MOVE_FRAME_FORWARD"</tag>
        <one-of>
          <item> forward </item>
          <item> move forward </item>
          <item> move frame forward </item>
        </one-of>
      </item>

      <item>
        <tag>out="HEAD"</tag>
        <one-of>
          <item> head </item>
        </one-of>
      </item>

      <item>
        <tag>out="LEFT_SHOULDER"</tag>
        <one-of>
          <item> left shoulder </item>
        </one-of>
      </item>

      <item>
        <tag>out="RIGHT_SHOULDER"</tag>
        <one-of>
          <item> right shoulder </item>
        </one-of>
      </item>

      <item>
        <tag>out="LEFT_ARM"</tag>
        <one-of>
          <item> left arm </item>
        </one-of>
      </item>

      <item>
        <tag>out="RIGHT_ARM"</tag>
        <one-of>
          <item> right arm </item>
        </one-of>
      </item>

      <item>
        <tag>out="LEFT_KNEE"</tag>
        <one-of>
          <item> left knee </item>
        </one-of>
      </item>

      <item>
        <tag>out="RIGHT_KNEE"</tag>
        <one-of>
          <item> right knee </item>
        </one-of>
      </item>

      <item>
        <tag>out="LEFT_FOOT"</tag>
        <one-of>
          <item> left foot </item>
        </one-of>
      </item>

      <item>
        <tag>out="RIGHT_FOOT"</tag>
        <one-of>
          <item> right foot </item>
        </one-of>
      </item>

      <item>
        <tag>out="CLOSE_COMMAND_SELECTOR"</tag>
        <one-of>
          <item> OK </item>
        </one-of>
      </item>

      <item>
        <tag>out="CANCEL_COMMAND_SELECTOR"</tag>
        <one-of>
          <item> cancel </item>
        </one-of>
      </item>

    </one-of>
  </rule>
</grammar>